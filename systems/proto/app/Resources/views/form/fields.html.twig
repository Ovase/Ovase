{% use 'form_div_layout.html.twig' with form_widget_simple as base_form_widget_simple %}

{%- block form_errors -%}
    {%- if errors|length > 0 -%}
    <ul class="form-errors">
        {%- for error in errors -%}
            <li>{{ error.message }}</li>
        {%- endfor -%}
    </ul>
    {%- endif -%}
{% endblock %}

{% block form_widget_simple %}
    {% if help is defined %}
        <span class="help-block">{{ help }}</span>
    {% endif %}
    {{ block('base_form_widget_simple') }}
{% endblock %}

